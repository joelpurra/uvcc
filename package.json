{
  "name": "uvcc",
  "version": "1.0.2",
  "description": "USB Video Class (UVC) device configurator. Used for webcams, camcorders, etcetera.",
  "homepage": "https://joelpurra.com/projects/uvcc/",
  "main": "index.js",
  "bin": {
    "uvcc": "index.js"
  },
  "scripts": {
    "test": "npm run --silent lint",
    "lint": "npm run --silent xo && npm run --silent lint:copyright",
    "lint:fix": "npm run --silent xo:fix",
    "lint:copyright": "find . -not \\( -path './.git/*' -or -path './node_modules/*' -or -path './dist/*' \\) -type f \\( -iname '*.js' \\) -print0 | xargs -0 grep -L 'This file is part of uvcc' | sed 's/^/File is missing copyright notice: /'",
    "xo": "xo",
    "xo:fix": "xo --fix"
  },
  "dependencies": {
    "array-non-uniq": "^1.0.0",
    "bluebird": "^3.5.1",
    "engine-check": "^1.0.1",
    "filter-obj": "^2.0.1",
    "find-up": "^5.0.0",
    "sort-keys": "^4.0.0",
    "stream-to-promise": "^3.0.0",
    "uvc-control": "github:joelpurra/node-uvc-control#v2-control-transfer-target-device",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "eslint-config-joelpurra": "github:joelpurra/eslint-config-joelpurra#semver:^1.0.0",
    "xo": "^0.33.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "usb",
    "usb video class",
    "uvc",
    "camera",
    "webcam",
    "webcamera",
    "controls",
    "configuration",
    "libusb",
    "libuvc",
    "uvc-control"
  ],
  "bugs": {
    "url": "https://github.com/joelpurra/uvcc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joelpurra/uvcc.git"
  },
  "author": {
    "name": "Joel Purra",
    "email": "mig@joelpurra.se",
    "url": "https://joelpurra.com/"
  },
  "license": "GPL-3.0"
}
